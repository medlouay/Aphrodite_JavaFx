<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" stylesheets="@../utils/Style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aphrodite.gui.AddPostController">
   <children>
      <AnchorPane fx:id="mainContainer" prefHeight="474.0" prefWidth="663.0">
          <VBox alignment="CENTER" prefHeight="474.0" prefWidth="663.0" spacing="10">
              <Label style="-fx-font-size: 20pt;" text="Add Post" />
      
              <HBox alignment="CENTER" spacing="10">
                  <Label text="Title:" />
                  <TextField fx:id="titleTextField" prefHeight="31.0" prefWidth="497.0" />
              </HBox>
      
      
              <HBox alignment="CENTER" spacing="10">
                  <Label text="Slug:" />
                  <TextField fx:id="slugTextField" prefHeight="31.0" prefWidth="497.0" />
              </HBox>
      
              <HBox alignment="CENTER" spacing="10">
                  <Label text="Summary:" />
                  <TextArea fx:id="summaryTextArea" prefHeight="50" prefWidth="524.0" />
              </HBox>
      
              <HBox alignment="CENTER" spacing="10">
                  <Label text="Content:" />
                  <TextArea fx:id="contentTextArea" prefHeight="128.0" prefWidth="516.0" />
              </HBox>
            <JFXButton fx:id="addButton" onAction="#handleAddOperation" prefHeight="54.0" prefWidth="153.0" styleClass="Addbtn" text="Add Post">
               <font>
                  <Font name="System Bold Italic" size="25.0" />
               </font>
            </JFXButton>
          </VBox>
         <JFXButton layoutX="22.0" layoutY="24.0" onAction="#handleReturn" prefHeight="42.0" prefWidth="52.0" styleClass="Addbtn" text="&lt;">
            <font>
               <Font name="System Bold Italic" size="25.0" />
            </font>
         </JFXButton>
      </AnchorPane>
   </children>
</StackPane>
