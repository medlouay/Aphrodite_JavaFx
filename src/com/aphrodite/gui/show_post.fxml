<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootAnchorPane" prefHeight="884.0" prefWidth="1323.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aphrodite.gui.ShowAllPostController">
    <TableView fx:id="tableView" layoutX="4.0" layoutY="1.0" prefHeight="843.0" prefWidth="1323.0">

        <columns>
            <TableColumn fx:id="titleColumn" prefWidth="171.0" text="Title" />
         <TableColumn fx:id="author_idCol" prefWidth="172.0" text="Author Name" />
            <TableColumn fx:id="slugColumn" prefWidth="175.0" text="Slug" />
            <TableColumn fx:id="summaryColumn" prefWidth="196.0" text="Summary" />
            <TableColumn fx:id="contentColumn" prefWidth="608.0" text="Content" />

        </columns>
      <contextMenu>
         <ContextMenu>
            <items>
               <MenuItem mnemonicParsing="false" onAction="#handleRefresh" text="Refresh" />
               <MenuItem mnemonicParsing="false" onAction="#handleViewmore" text="View More About it" />
               <MenuItem mnemonicParsing="false" onAction="#handleComment" text="Comment" />
               <MenuItem mnemonicParsing="false" onAction="#handleViewComment" text="View Comments" />
               <MenuItem mnemonicParsing="false" onAction="#handleEdit" text="Edit" />
               <MenuItem mnemonicParsing="false" onAction="#handleDelete" text="Delete" />
            </items>
            <styleClass>
               <String fx:value="table-context" />
               <String fx:value="colored-context-menu" />
            </styleClass>
         </ContextMenu>
      </contextMenu>
    </TableView>

    <Button layoutX="1248.0" layoutY="845.0" onAction="#goToAddPostScreen" text="Add Post" />

</AnchorPane>
